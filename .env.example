# Shared (root) env for local dev
NODE_ENV=development

# Postgres
PG_HOST=127.0.0.1
PG_PORT=5432
PG_USER=postgres
PG_PASS=postgres
PG_DB=mangwale_booking

# NATS (optional)
NATS_URL=nats://127.0.0.1:4222

# V1 (PHP/MySQL) Finance endpoints
V1_BASE_URL=http://localhost:8080
V1_AUTH_TOKEN=dev-token

# Finance mocking (development convenience)
# When true, services will bypass V1 HTTP calls and return mocked responses
FINANCE_MOCK=true

# Default ports for apps (each app also has its own .env to override)
GATEWAY_PORT=4000
ROOMS_PORT=4001
SERVICES_PORT=4002
PRICING_PORT=4003
BRIDGE_FINANCE_PORT=4004
MOVIES_PORT=4005
